@using HOSPEDAJE.Areas.UsuarioArea.Payloads.EntidadesDTO
@model RegistrarUsuarioDTO

@{
    Layout = "~/Views/Shared/_HomeTemplate.cshtml";
    ViewData["Title"] = "Registrar Usuario";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="RegistrarProceso" method="post">
    <div>
        <select asp-for="IdRol">
            <option value="1">Administrador</option>
            <option value="2">Personal Limpieza</option>
            <option value="3">Personal Mantenimiento</option>
            <option value="4">Recepcionista</option>
        </select>
        <span asp-validation-for="IdRol"></span>
    </div>

    <div>
        <input type="text"  asp-for="Nombre" placeholder="Nombre" />
        <span asp-validation-for="Nombre"></span>
    </div>

    <div>
        <input type="text" asp-for="Apellido" placeholder="Apellido" />
        <span asp-validation-for="Apellido"></span>
    </div>

    <div>
        <input type="email"  asp-for="Correo" placeholder="Correo" />
        <span asp-validation-for="Correo"></span>
    </div>

    <div>
        <input type="text"  asp-for="Contraseña"  placeholder="Contraseña" />
        <span asp-validation-for="Contraseña"></span>
    </div>

    <div>
        <input type="text" asp-for="Estado" value="A" text="Activo" readonly />
        <span asp-validation-for="Estado"></span>
    </div>

    <button type="submit">Registrar Cliente</button>
</form>
@if (ViewData.ModelState.ContainsKey("Error"))
{
    <div>
        @ViewData.ModelState["Error"].Errors.FirstOrDefault()?.ErrorMessage
    </div>
}