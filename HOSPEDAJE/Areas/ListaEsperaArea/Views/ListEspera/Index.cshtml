@using HOSPEDAJE.Areas.ListaEsperaArea.Payloads.EntidadesDTO
@model List<ListaEsperaDTO>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div>
    <a asp-area="ListaEsperaArea" asp-controller="ListEspera" asp-action="RegistrarListaEsperaView">PruebaRegistrarListaEspera</a>
</div>

<table>
    <thead>
        <tr>
            <th>ID Cliente</th>
            <th>Prioridad</th>
            <th>Estado</th>
            <th>Descripcion</th>
            <th>Acciones</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdCliente</td>
                <td>@item.Prioridad</td>
                <td>@item.Estado</td>
                <td>@item.Descripcion</td>
                <td>
                    <a asp-action="Detalle" asp-route-id="@item.IdEspera">Ver</a> |
                    <a asp-action="Editar" asp-route-id="@item.IdEspera">Editar</a>
                    <form asp-action="Eliminar" asp-route-id="@item.IdEspera" method="post" style="display:inline;">
                        <button type="submit">Eliminar</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>


